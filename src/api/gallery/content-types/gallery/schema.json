{
  "kind": "collectionType",
  "collectionName": "galleries",
  "info": {
    "singularName": "gallery",
    "pluralName": "galleries",
    "displayName": "Gallery",
    "description": "Gallery with year, description, location, conference number, thumbnail, and images"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "year": {
      "type": "integer",
      "required": true,
      "min": 1900,
      "max": 2100
    },
    "description": {
      "type": "text"
    },
    "location": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "conferenceNumber": {
      "type": "integer",
      "min": 1
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}