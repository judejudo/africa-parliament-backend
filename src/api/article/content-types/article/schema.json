{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Articles with date of post, description, author, title, file attachment, and images"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "dateOfPost": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "author": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "fileAttachment": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["files"]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    }
  }
}