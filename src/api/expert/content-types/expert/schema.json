{
  "kind": "collectionType",
  "collectionName": "experts",
  "info": {
    "singularName": "expert",
    "pluralName": "experts",
    "displayName": "Expert",
    "description": "Experts with name, role, and social media links (LinkedIn, X, Facebook)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "role": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "linkedinUrl": {
      "type": "string",
      "regex": "^https?://(www\\.)?linkedin\\.com/.+"
    },
    "xUrl": {
      "type": "string",
      "regex": "^https?://(www\\.)?(twitter\\.com|x\\.com)/.+"
    },
    "facebookUrl": {
      "type": "string",
      "regex": "^https?://(www\\.)?facebook\\.com/.+"
    }
  }
}