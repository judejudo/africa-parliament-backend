{
  "kind": "collectionType",
  "collectionName": "conferences",
  "info": {
    "singularName": "conference",
    "pluralName": "conferences",
    "displayName": "Conference",
    "description": "Conferences with title, image attachment, file attachment, host institution, description, location, and date of occasion"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "imageAttachment": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "fileAttachment": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files"
      ]
    },
    "hostInstitution": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "description": {
      "type": "text"
    },
    "location": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "dateOfOccasion": {
      "type": "date",
      "required": true
    },
    "comunique": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
